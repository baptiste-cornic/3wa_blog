    <header>
        {% include 'templates/headerView.php'  %}
    </header>
    <main>
        <h2>3wa blog - articles</h2>
        <div class="articles">
            {% for article in articles %} 
                <div>
                    <h3><a href="article.php?id={{article.id}}">{{article.title}}</a></h3>
                    <p>{{article.content}}</p>
                </div>
            {% endfor %} 
        </div>
    </main>    
</body>
</html>